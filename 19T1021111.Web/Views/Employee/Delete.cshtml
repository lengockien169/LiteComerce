@model _19T1021111.DomainModels.Employee
@{
    ViewBag.Title = "Xoá nhân viên";
}
<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <div class="col-sm-10 text-center">
                    @if (Model.Photo.Contains("http"))
                    {
                        <img style="width:146px;height:154px;border-radius:6px" src="@Model.Photo" alt="avatar" />
                    }
                    else
                    { <img style="width:146px;height:154px;border-radius:6px" src="~/Images/@Model.Photo" alt="avatar" />}
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName @Model.FirstName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes </p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xoá nhân viên này?')"><i class="glyphicon glyphicon-trash"></i> Xác nhận xoá</button>
                    <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

