@model _19T1021111.DomainModels.Employee
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EmployeeID)
            <div class="form-group">
                <div class="col-sm-10 text-center">
                    @*@if (Model.Photo.Contains("http"))
                        {
                            <img style="width:146px;height:154px;border-radius:6px" src="@Model.Photo" alt="avatar" />
                        }
                        else
                        {
                            <img style="width:146px;height:154px;border-radius:6px" src="~/Image/@Model.Photo" alt="avatar" />
                        }*@
                    @if (Model.EmployeeID != 0)
                    {
                        if (Model.Photo.Contains("http"))
                        {
                            <img style="width:146px;height:154px;border-radius:6px" src="@Model.Photo" alt="avatar" />
                        }
                        else
                        {
                            <img style="width:146px;height:154px;border-radius:6px" src="~/Images/@Model.Photo" alt="avatar" />
                        }
                    }
                    else
                    {

                    }
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName,
                        new { @class = "form-control", @placeholder = "", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName,
                        new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    @if (Model.EmployeeID != 0)
                    {
                        <input type="text" name="birthday" class="form-control" value="@String.Format("{0:dd/MM/yyyy}", Model.BirthDate)" />
                    }
                    else
                    {
                        <input type="text" name="birthday" class="form-control" />
                    }
                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                    @Html.HiddenFor(m => m.BirthDate)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Notes,
                        new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Notes, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email,
                        new { @class = "form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="Photo">Thay đổi ảnh</label>
                <div class="col-sm-10">
                    @if (Model.EmployeeID != 0)
                    {
                        if (Model.Photo.Contains("http"))
                        {
                            <img id="photo" style="width:146px;height:154px;border-radius:6px" src="@Model.Photo" alt="avatar" />
                        }
                        else
                        {
                            <img id="photo" style="width:146px;height:154px;border-radius:6px" src="~/Images/@Model.Photo" alt="avatar" />
                        }
                    }
                    else
                    {
                        <img id="photo" src="" style="width:146px;height:154px;border-radius:6px" />
                    }
                    @Html.HiddenFor(m => m.Photo)
                    <input type="file" class="form-control" name="uploadPhoto"
                           onchange="document.getElementById('photo').src = window.URL.createObjectURL(this.files[0])" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i>Lưu dữ liệu</button>
                    <a href="~/Employee" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

