@model _19T1021111.DomainModels.Category
@{
    ViewBag.Title = "Xoá loại hàng";
}

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xoá loại hàng này?')"><i class="glyphicon glyphicon-trash"></i> Xác nhận xoá</button>
                    <a href="~/Category" class="btn btn-warning">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

